<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-4 shadow-lg rounded-3 text-center" role="alert" style="font-weight: 500;">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-4 shadow-lg rounded-3 text-center" role="alert" style="font-weight: 500;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>